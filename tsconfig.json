{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "target": "es2020",
    "module": "es2020",
    "lib": ["dom", "es2020"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}